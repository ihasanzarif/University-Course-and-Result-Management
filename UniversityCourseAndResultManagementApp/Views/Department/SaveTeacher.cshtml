@model UniversityCourseAndResultManagementApp.Models.Teacher
@{
    ViewBag.Title = "Save Teacher";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
<h3>Department</h3>
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">


        <li>@Html.ActionLink("Save Department", "SaveDepartment", "Department")</li>
        <li>@Html.ActionLink("View Department", "ViewDepartment", "Department")</li>

        <li>@Html.ActionLink("Save Teacher", "SaveTeacher", "Department")</li>

    </ul>

</div>
    
<div>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Save Teacher</legend>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.Name) </td>
                    <td>@Html.TextBoxFor(m => m.Name)</td>
                    <td>@Html.ValidationMessageFor(m => m.Name)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Address) </td>
                    <td>@Html.TextBoxFor(m => m.Address)</td>
                    <td>@Html.ValidationMessageFor(m => m.Address)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Email) </td>
                    <td>@Html.TextBoxFor(m => m.Email)</td>
                    <td>@Html.ValidationMessageFor(m => m.Email)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.ContactNo) </td>
                    <td>@Html.TextBoxFor(m => m.ContactNo)</td>
                    <td>@Html.ValidationMessageFor(m => m.ContactNo)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.DesignationId) </td>
                    <td>@Html.DropDownListFor(m => m.DesignationId, new SelectList(ViewBag.designations, "Value", "Text"))</td>
                    <td>@Html.ValidationMessageFor(m => m.DesignationId)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.DepartmentId) </td>
                    <td>@Html.DropDownListFor(m => m.DepartmentId, new SelectList(ViewBag.departments, "Value", "Text"))</td>
                    <td>@Html.ValidationMessageFor(m => m.DepartmentId)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.CreditTake) </td>
                    <td>@Html.TextBoxFor(m => m.CreditTake)</td>
                    <td>@Html.ValidationMessageFor(m => m.CreditTake)</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td> <input type="submit" value="Save"/></td>
                </tr>

            </table>
            <label>@ViewBag.msg</label>
        </fieldset>
    }
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>

