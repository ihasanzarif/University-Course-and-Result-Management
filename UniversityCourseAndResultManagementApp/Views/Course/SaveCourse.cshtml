@model UniversityCourseAndResultManagementApp.Models.Course

@{
    ViewBag.Title = "SaveCourse";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
<h3>Courses</h3>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Save Course", "SaveCourse", "Course")</li>
            <li>@Html.ActionLink("Course Statics", "ViewCourseStatics", "Department")</li>
            <li>@Html.ActionLink("Course Assign Teacher", "CourseAssaignTeacher", "Department")</li>
            <li>@Html.ActionLink("Unassign Courses", "UnassignCourses", "Department")</li>

        </ul>

    </div>
   
<div>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Save Course</legend>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.Code) </td>
                    <td>@Html.TextBoxFor(m => m.Code)</td>
                    <td>@Html.ValidationMessageFor(m => m.Code)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Name) </td>
                    <td>@Html.TextBoxFor(m => m.Name)</td>
                    <td>@Html.ValidationMessageFor(m => m.Name)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Credit) </td>
                    <td>@Html.TextBoxFor(m => m.Credit)</td>
                    <td>@Html.ValidationMessageFor(m => m.Credit)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Description) </td>
                    <td>@Html.TextBoxFor(m => m.Description)</td>
                    <td>@Html.ValidationMessageFor(m => m.Description)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.DepartmentId) </td>
                    <td>@Html.DropDownListFor(m => m.DepartmentId, new SelectList(ViewBag.departments, "Value", "Text"))</td>
                    <td>@Html.ValidationMessageFor(m => m.DepartmentId)</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.SemesterId) </td>
                    <td>@Html.DropDownListFor(m => m.SemesterId, new SelectList(ViewBag.semesters, "Value", "Text"))</td>
                    <td>@Html.ValidationMessageFor(m => m.SemesterId)</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td> <input type="submit" value="Save"/></td>
                </tr>

            </table>
            <label>@ViewBag.msg</label>
        </fieldset>
    }
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>
